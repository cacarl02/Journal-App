<%= form_with model: [@category, @task], local: true do |f| %>
    <p>
        <%= f.label :task %>
        <%= f.text_field :task %>
    </p>
    <p>
    <%= f.label :quadrant %>
    <%= f.select :quadrant, [1, 2, 3, 4]%>
</p>
    <p>
        <% if @task.errors.any? %>
            <ul>
                <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>
    </p>
    <p>
        <%= f.submit 'Update' %>
    </p>
    <%= link_to 'Return to Index', categories_path %>
<% end %>