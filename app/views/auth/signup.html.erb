<%= form_with scope: :user, url: signup_path, local: true do |f| %>
    <%= f.label "Name" %>
    <%= f.text_field :name %>
    <%= f.label "Email" %>
    <%= f.text_field :email %>
    <%= f.label "Password" %>
    <%= f.password_field :password %>
    <%= f.label "Confirm Password" %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit 'Sign Up' %>
    <%= link_to 'Back to Login', signin_path %>
<% end %>
