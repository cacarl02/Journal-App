<div class="w-full relative overflow-x-auto flex flex-col items-center">
<%= form_with class: "bg-gray-200 w-1/4 flex flex-col justify-center p-6", scope: :user, url: signup_path, local: true do |f| %>
    <p>
        <%= f.label "Name" %>
        <%= f.text_field :name, class: "block w-full p-2 text-gray-900 border border-gray-300" %>
    </p>
    <p>
        <%= f.label "Email" %>
        <%= f.text_field :email, class: "block w-full p-2 text-gray-900 border border-gray-300" %>
    </p>
    <p>
        <%= f.label "Password" %>
        <%= f.password_field :password, class: "block w-full p-2 text-gray-900 border border-gray-300" %>
    </p>
    <p>
        <%= f.label "Confirm Password" %>
        <%= f.password_field :password_confirmation, class: "block w-full p-2 text-gray-900 border border-gray-300" %>
    </p>
    <%= f.submit 'Sign Up', class: "cursor-pointer mt-2 mb-2 w-full text-center py-3 rounded bg-green-500 hover:bg-green-600 text-gray-800 hover:bg-green-dark focus:outline-none" %>
    <%= link_to 'Back to Login', signin_path, class: "bg-blue-500 hover:bg-blue-600 text-white focus:outline-none rounded-lg font-medium text-center px-5 py-2.5" %>
<% end %>

</div>