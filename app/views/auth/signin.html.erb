<%= form_with scope: :user, url: signin_path, local: true do |f| %>
    <%= f.label "Email" %>
    <%= f.text_field :email %>
    <%= f.label "Password" %>
    <%= f.password_field :password %>
    <%= f.submit 'Login' %>
    <br>
    <span>Not registered yet?</span>
    <%= link_to 'Signup Now!', signup_path %>
<% end %>
